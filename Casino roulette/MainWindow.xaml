            <TextBlock Text="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="Black" Grid.Row="3" Grid.Column="1" MouseLeftButtonUp="PlaceBetOnNumber_MouseLeftButtonUp" TextAlignment="Center" Background="Transparent" Cursor="Hand"/>

            <TextBlock Text="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="White" Grid.Row="2" Grid.Column="1" MouseLeftButtonUp="PlaceBetOnNumber_MouseLeftButtonUp"/>
