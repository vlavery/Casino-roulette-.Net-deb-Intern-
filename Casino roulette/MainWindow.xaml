                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.282"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button Content="2 to 1" Click="PlaceBetOn2To1Mid_Click" Margin="738,-352,11,360" Background="Black" Foreground="White"/>
            <Button Content="2 to 1" Click="PlaceBetOn2To1Bottom_Click" Margin="738,-297,11,304" Background="Black" Foreground="White"/>

            <TextBox x:Name="BetAmountTextBox" VerticalContentAlignment="Center" Margin="297,-161,392,172" TextChanged="BetAmountTextBox_TextChanged"/>
            <Button Content="Place Bet" Click="PlaceBetButton_Click"/>

           


        </Grid>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="7" FontWeight="Bold" Foreground="White" Margin="811,79,0,0" RenderTransformOrigin="1.032,0.895" Text="2 to 1">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.386"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform></TextBlock>
