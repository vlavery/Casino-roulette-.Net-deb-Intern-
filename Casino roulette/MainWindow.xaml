        <Grid Grid.Row="1">


            <!-- Betting Input -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20"/>

            <!-- Chip Count Display -->
            <TextBlock Text="{Binding ChipCount}" HorizontalAlignment="Right" Margin="0,20,20,0" Grid.Row="1"/>

            <Button Content="1-18" Click="PlaceBetOn1To12_Click" Height="30" Margin="72,-217,618,217" Background="Black" Foreground="White"/>
            <Button Content="19-36" Click="PlaceBetOn25To36_Click" Height="30" Margin="640,-217,53,217" RenderTransformOrigin="0.13,2.7" Background="Black" Foreground="White"/>

            <Button Content="Even" Click="PlaceBetOnEven_Click" Height="30" Margin="187,-217,508,217" Background="Black" Foreground="White"/>
            <Button Content="Odd" Click="PlaceBetOnOdd_Click" Height="30" Margin="534,-217,165,217" Background="Black" Foreground="White"/>
            <Button Content="Red" Click="PlaceBetOnRed_Click" Height="30" Margin="413,-217,271,217" Background="Red"/>
            <Button Content="Black" Click="PlaceBetOnBlack_Click" Height="30" Margin="297,-217,392,217" Background="Black" Foreground="White" RenderTransformOrigin="1.057,0.6"/>
            <Button Content="1st 12" Click="PlaceBetOn1st12_Click" Height="30" Margin="72,-258,508,258" Background="Black" Foreground="White"/>
            <Button Content="2nd 12" Click="PlaceBetOn2nd12_Click" Height="30" Margin="297,-258,271,258" Background="Black" Foreground="White"/>
            <Button Content="3rd 12" Click="PlaceBetOn3rd12_Click" Height="30" Margin="534,-258,53,258" Background="Black" Foreground="White"/>
